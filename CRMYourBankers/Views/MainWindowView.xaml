<Window
    x:Class="CRMYourBankers.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CRMYourBankers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:CRMYourBankers.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding LabelText}" />
            <Label Content="{Binding LabelText2}" />
            <Label Content="{Binding LabelText3}" />
            <TextBox
                Width="100"
                Height="50"
                Text="{Binding TextBoxText}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Vertical">
        <Button
            x:Name="ChangeLabelButton"
            Width="200"
            Height="20"
            Command="{Binding ChangeLabelButtonCommand}"
            Content="Przycisk" />
        <Button
            x:Name="ChangeLabelButton2"
            Width="200"
            Height="20"
            Command="{Binding ChangeLabelButtonCommand2}"
            Content="Przycisk do Label2" />
        <Button
            x:Name="ChangeLabelButton3"
            Width="200"
            Height="20"
            Command="{Binding ChangeLabelButtonCommand3}"
            Content="Przycisk do Label3" />
        <CheckBox             
            x:Name="ChangeLabelCheckBox"
            Width="200"
            Height="40"
            Command="{Binding ChangeLabelButtonCommand4}"
            Content="CheckBox do Label3" />
        </StackPanel>                
    </StackPanel>
</Window>
