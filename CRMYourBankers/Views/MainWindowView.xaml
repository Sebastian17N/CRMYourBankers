<Window
    x:Class="CRMYourBankers.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CRMYourBankers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:CRMYourBankers.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewmodels:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding LabelText}" />
            <TextBox Text="{Binding TextBoxText}" TextWrapping="Wrap" Width="100" Height="50"/>
        </StackPanel>
        <Button
            x:Name="ChangeLabelButton"
            Width="200"
            Height="20"
            Command="{Binding ChangeLabelButtonCommand}"
            Content="Przycisk" />
        
    </StackPanel>
</Window>
